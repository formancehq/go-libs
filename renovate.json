{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchBaseBranches": ["main"],
      "enabled": false
    },
    {
      "matchDepNames": ["golang", "go"],
      "groupName": "go"
    },
    {
      "automerge": true,
      "platformAutomerge": true
    }
  ]
}
